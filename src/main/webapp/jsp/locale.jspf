<!DOCTYPE html>

<html>
    <form action="controller" method="post">
        <div class="locale">
            <button type="submit" name="lang" value="uk_UA">UA</button>
            <button type="submit" name="lang" value="en_US">EN</button>
            <input name="command" value="change_locale" hidden="hidden" >
        </div>
    </form>
    <fmt:setLocale value="${locale}" scope="session"/>
    <fmt:setBundle basename="resources"/>
    <c:set var="currentLocale" value="${locale}" scope="session"/>
</html>